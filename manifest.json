{
    "manifest_version": 2,

    "name": "House of the Cheeky Serpent",
    "description": "Replace references to CrossFit on your social networking sites with House of the Cheeky Serpent. Because.",
    "version": "1.2",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "content_scripts": [
        {
            "matches": [
                "*://*.crossfit.com/*",
                "*://*.facebook.com/*",
                "*://*.twitter.com/*",
                "*://plus.google.com/*",
                "*://*.tumblr.com/*",
                "*://*.blogspot.com/*",
                "*://*.linkedin.com/*",
                "*://*.pinterest.com/*",
                "*://*.flickr.com/*",
                "*://*.instagram.com/*",
                "*://*.meetup.com/*",
                "*://*.myspace.com/*",
                "*://*.vk.com/*"
            ],
            "run_at": "document_idle",
            "js": ["replace_crossfit.js"],
            "all_frames": true
        }
    ]
}
